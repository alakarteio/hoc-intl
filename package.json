{
  "name": "k-intl",
  "description": "React HOC to provide internationalization",
  "version": "0.8.0",
  "main": "index.js",
  "author": "Guillaume CRESPEL <guillaume.crespel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=build rollup -c ./misc/rollup.config.js",
    "lint:js": "eslint --ext js,jsx src",
    "lint": "npm-run-all --parallel lint:*",
    "test": "cross-env jest",
    "coveralls": "yarn test --coverage --collectCoverageFrom=src/**/*.{js,jsx} && cat ./coverage/lcov.info | coveralls",
    "ci": "npm-run-all --parallel lint coveralls"
  },
  "dependencies": {
    "fbjs": "^1.0.0",
    "intl-messageformat": "^2.2.0"
  },
  "peerDependencies": {
    "react": "^16.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "formatjs-extract-cldr-data": "^10.1.0",
    "jest": "^24.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "rollup": "^1.4.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-memory": "^3.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "serialize-javascript": "^1.4.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "env": {
      "build": {
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-transform-react-jsx",
          "@babel/plugin-proposal-object-rest-spread"
        ]
      },
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": false
            }
          ]
        ],
        "plugins": [
          "@babel/plugin-transform-modules-commonjs",
          "@babel/plugin-proposal-object-rest-spread",
          "@babel/plugin-transform-react-jsx",
          "@babel/plugin-proposal-class-properties"
        ]
      }
    }
  },
  "eslintIgnore": [
    "src/en.js"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel"
    ],
    "globals": {
      "fetch": false
    },
    "env": {
      "browser": true
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "object-curly-newline": "off",
      "react/destructuring-assignment": "off",
      "semi": [
        2,
        "never"
      ]
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./misc/test-setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/en.js"
    ]
  }
}
