{
  "name": "k-intl",
  "description": "React HOC to provide internationalization",
  "version": "0.5.4",
  "main": "index.js",
  "author": "Guillaume CRESPEL <guillaume.crespel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:data": "babel-node scripts/build-data",
    "build:core": "cross-env NODE_ENV=build rollup -c ./misc/rollup.config.js",
    "build": "npm-run-all build:*",
    "lint:js": "eslint --ext js,jsx src",
    "lint": "npm-run-all --parallel lint:*",
    "test": "cross-env LANG=en_GB.UTF-8 jest",
    "coveralls": "yarn test --coverage --collectCoverageFrom=src/**/*.{js,jsx} && cat ./coverage/lcov.info | coveralls",
    "ci": "npm-run-all --parallel lint coveralls"
  },
  "dependencies": {
    "fbjs": "^0.8.17",
    "intl-messageformat": "^2.2.0",
    "react-intl": "^2.4.0"
  },
  "peerDependencies": {
    "react": "^16.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "formatjs-extract-cldr-data": "^4.1.0",
    "jest": "^22.1.3",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rollup": "^0.63.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-memory": "^3.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "serialize-javascript": "^1.4.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "env": {
      "build": {
        "plugins": [
          "external-helpers",
          "transform-class-properties",
          "transform-react-jsx",
          "transform-object-rest-spread"
        ]
      },
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ]
        ],
        "plugins": [
          "transform-es2015-modules-commonjs",
          "transform-object-rest-spread",
          "transform-react-jsx",
          "transform-class-properties"
        ]
      }
    }
  },
  "eslintIgnore": [
    "src/en.js"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel"
    ],
    "globals": {
      "fetch": false
    },
    "env": {
      "browser": true
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "object-curly-newline": "off",
      "react/destructuring-assignment": "off",
      "semi": [
        2,
        "never"
      ]
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./misc/test-setup.js",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/en.js"
    ]
  }
}
